---
import type {PokemonInfoResponse} from "@interfaces/pokemonInfoResponse";
interface Props {
    name: string;
    url: string;
    isBig?: boolean;
}
const { name, url } = Astro.props;
const id = url.split("/").at(-2);
const imageSrc = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`

---
<!-- <a href={`/pokemons/${name}`} > -->
<a href={`/pokemons/${name}`} class="rounded border-2 flex flex-col justify-center items-center p-2">
    <!--class:list=[
        `roundedflex flex-col justify-center items-center p-2`,
        {
            border: !isBig?,
        },
    ]-->
    <img
            transition:name={`${name}-image`}
            src={imageSrc}
            alt={name}/>
    <!-- capitalize pone la primera letra en mayÃºscula -->
    <span class="capitalize">{name}</span>
</a>